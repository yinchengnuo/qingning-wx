.qrcode {
    position: fixed;
    width: 60vw;
    height: 78vw;
    left: 50%;
    top: 50%;
    margin: -39vw 0 0 -30vw;
    z-index: 666;
}
.qrcode-image {
    width: 100%;
    height: 100%;
}
.qrcode-close {
    position: absolute;
    width: 10vw;
    height: 10vw;
    left: 50%;
    bottom: 0;
    margin-left: -5vw;
    color: #ccc;
    font-size: 8vw;
    text-align: center;
    line-height: 10vw;
}