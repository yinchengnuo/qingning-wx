@keyframes rolation
{
    from {
        transform: rotateZ(0deg);
    }
    to {
        transform: rotateZ(360deg);
    }
}
@keyframes translation
{
    0% {
        transform: translateY(-10vw);
    }
    50% {
        transform: translateY(10vw);
    }
    100% {
        transform: translateY(-10vw);
    }
}
.small-video {
    width: 100vw;
    height: 100vh;
}
.small-video-swiper {
    width: 100%;
    height: 100%;
}
.small-video-loading-wrapper {
    position: absolute;
    width: 20vw;
    height: 20vw;
    left: 50%;
    top: 50%;
    margin-left: -10vw;
    margin-top: -10vw;
    z-index: 2;
    animation: translation 2s ease-in-out infinite;
}
.small-video-loading {
    position: absolute;
    width: 100%;
    height: 100%;
    animation: rolation 1s linear infinite;
}
.small-video-loading-image {
    position: absolute;
    width: 20vw;
    height: 20vw;
    border-radius: 50%;
    opacity: .8;
}
.small-video-cover-videoinfo {
    position: absolute;
    width: 100%;
    height: 100%;
    z-index: 1;
}
.small-video-cover-userinfo {
    position: absolute;
    width: 96vw;
    height: 20vw;
    left: 2vw;
    bottom: calc(120rpx + 10vw);
}
.small-video-cover-user, .small-video-cover-videodes {
    height: 10vw;
}
.small-video-cover-user {
    display: flex;
    align-items: center;
}
.small-video-cover-userpic {
    width: 10vw;
    height: 10vw;
    border-radius: 50%;
    margin-right: 2vw;
}
.small-video-cover-name {
    font-size: 4vw;
    color: #fff;
    margin-right: 2vw;
}
.small-video-cover-level {
    width: auto;
    height: 4vw;
    line-height: 4vw;
    padding: 0 1vw;
    font-size: 3vw;
    background-color: orangered;
    color: #fff;
    margin-right: 2vw;
}
.small-video-cover-add {
    color: #fff;
    width: 4vw;
    height: 4vw;
    border-radius: 50%;
    text-align: center;
    line-height: 3.5vw;
    font-size: 4vw;
    background-color: orangered;
}
.small-video-cover-videodes {
    box-sizing: border-box;
    line-height: 3vw;
    font-size: 3vw;
    color: #fff;
    text-indent: 2em;
}
.small-video-cover-bottom {
    position: absolute;
    width: 100%;
    height: 10vw;
    bottom: 120rpx;
    display: flex;
    justify-content: space-around;
    align-items: center;
}
.small-video-cover-share, .small-video-cover-music {
    width: 10vw;
    height: 10vw;
    display: flex;
    border-radius: 50%;
    justify-content: space-around;
    align-items: center; 
    background-color: rgba(0, 0, 0, .6)
}
.small-video-cover-share-icon {
    width: 5vw;
    height: 4vw;
}
.small-video-cover-music-icon {
    width: 10vw;
    height: 10vw;
    border-radius: 50%;
    animation: rolation 10s linear infinite;
}
.small-video-cover-download {
    width: 70vw;
    height: 10vw;
    overflow: hidden;
    border-radius: 10vw;
    background-color: #fff;
}
.small-video-cover-download-icon {
    width: 10vw;
    height: 10vw;
    float: left;
}
.small-video-cover-download-text {
    display: inline-block;
    width: 60vw;
    height: 10vw;
    line-height: 10vw;
    color: rgb(255, 0, 66);
    font-weight: bold;
    font-size: 28rpx;
    opacity: .6;
}
.live-room-live-player {
    position: absolute;
    width: 100%;
    height: 100%;
    z-index: 0;
    opacity: 0;
}
.small-video-cover-image {
    position: absolute;
    width: 100%;
    height: 100%;
    z-index: -1;
}